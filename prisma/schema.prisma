generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Student {
  sId String @id @default(uuid())
  firstName String
  lastName String
  major String
  school String
}

model User {
  userId String @id @default(uuid())
  authId String @unique
  email String @unique
}

enum GradeEnum {
  FRESHMAN
  SOPHOMORE
  JUNIOR
  SENIOR
}